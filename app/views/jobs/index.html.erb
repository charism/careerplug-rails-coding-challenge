<h1>Jobs</h1>
<div class="container-fluid">
  <h4><%= @jobs_info_message %></h4>
  <%= button_to "Clear Search", user_jobs_path(current_user.id), method: "get" %>
</div>
<table class="table table-striped table-bordered table-hover">
  <tr>
    <th><h3>Name</h3></th>
    <th><h3>Description</h3></th>
    <th><h3>Employment Type</h3></th>
    <th><h3>Status</h2></th>
    <th>&nbsp;</th>
  </tr>

  <% @jobs.each do |job| %>
  <tr>
    <div id="job_row">
      <td><%= link_to job.name, user_job_path(user_id: job.user_id, id: job.id) %></td>
      <td><%= job.description.html_safe %></td>
      <td><%= job.employment_type %></td>
      <td><%= job.status %></td>
      <td>
        <div id="comment"><%= render 'comment_form_closed', job_id: job.id %></div>
      </td>
    </div>
  </tr>
  <% end %>

</table>

